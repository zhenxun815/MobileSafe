<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiheng.mobilesafe.activity.HomepageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/blue_bkg">

        <ImageView
            android:id="@+id/iv_homepage_heima"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/heima"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_homepage_heima"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_homepage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屌丝安全卫士"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_homepage_title"
                android:layout_marginTop="13dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="屌丝安全卫士,时刻保护您的手机安全,屌丝安全卫士,时刻保护您的手机安全"
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/setting_selector"
            android:onClick="setting"
            android:src="@drawable/setting"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/gv_homepage"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"/>




</LinearLayout>
