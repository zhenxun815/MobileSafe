<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dialog_title_background">

        <ImageView
            android:id="@+id/iv_dialog_initpsw_title_default_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/dialog_title_default_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_dialog_initpsw_title_default_icon"
            android:text="初始化密码设置"
            android:textSize="25sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_dialog_initpsw_psw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="请输入密码"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/et_dialog_initpsw_psw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:hint="请确认密码"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_stlj_edit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/dg_btn_confirm_select"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_srlj_edit_concel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/dg_btn_cancel_select"
            android:text="取消"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
