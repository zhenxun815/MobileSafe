<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview_setting="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yiheng.mobilesafe.SettingActivity">

    <TextView
        android:id="@+id/tv_setting_title_bar"
        style="@style/TitleBarStyle"
        android:text="设置中心"/>

    <com.yiheng.mobilesafe.SettingItemView
        android:id="@+id/setting_update"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        myview_setting:tv_setting_title="设置自动更新"
        myview_setting:tv_setting_background="top"/>

    <com.yiheng.mobilesafe.SettingItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        myview_setting:tv_setting_background="middle"
        myview_setting:tv_setting_title="骚然拦截设置"
        myview_setting:tv_setting_enable="true"/>

    <com.yiheng.mobilesafe.SettingItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        myview_setting:tv_setting_background="bottom"
        myview_setting:tv_setting_title="归属地显示设置"
        myview_setting:tv_setting_enable="false"/>


</LinearLayout>
